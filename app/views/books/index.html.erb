<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
 </div>
 <% end %>

	<div class="container">
    <p id="notice"></p>
      <div class="row">
        <div class="col-xs-3">
          <%= render "users/profile", user: current_user %>
          <%= render "books/new", book:@book %>
        </div>
        <div class="col-xs-9">
		<h2>Books</h2>
		<table class="table">
		  <tbody>
		  	<% @books.each do |book| %>
		  	<tr>
        <td>
        	<%= link_to user_path(book.user.id) do %>
        	<%= attachment_image_tag book.user, :profile_image, fallback:"no_image.png", size: "100x100" %><br>
        	<%= book.user.name %>
        	<% end %>

        </td>
        <td>
        	<%= link_to book_path(book.id) do %>
        	<%= book.title %>
        	<% end %>
        </td>
        <td>
        	<%= book.body %>
        </td>
			</tr>
    	<% end %>
		</tbody>
	</table>

        </div>
      </div>
</div>

